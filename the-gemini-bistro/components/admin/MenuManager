import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { fetchMenu, addMenuItem, updateMenuItem, deleteMenuItem } from '../../services/apiService';
import { MenuItem } from '../../types';
import { logError } from '../../services/monitoringService';

const emptyFormState = {
    name: '',
    category: 'Appetizers' as MenuItem['category'],
    price: '',
    description: '',
    ingredients: '',
    tags: '',
};

const MenuManager: React.FC = () => {
    const [menu, setMenu] = useState<MenuItem[]>([]);
    const [isLoading, setIsLoading] = useState(true);
    const [isModalOpen, setIsModalOpen] = useState(false);
    const [editingItem, setEditingItem] = useState<typeof emptyFormState & { originalName?: string } | null>(null);

    const loadMenu = async () => {
        setIsLoading(true);
        try {
            const data = await fetchMenu();
            setMenu(data);
        } catch (error) {
            console.error("Failed to load menu", error);
            logError(error as Error, { context: "Admin: Load Menu" });
        } finally {
            setIsLoading(false);
        }
    };

    useEffect(() => {
        loadMenu();
    }, []);

    const openModalForEdit = (item: MenuItem) => {
        setEditingItem({
            ...item,
            originalName: item.name,
            ingredients: item.ingredients.join(', '),
            tags: item.tags?.join(', ') || '',
        });
        setIsModalOpen(true);
    };
    
    const openModalForNew = () => {
        setEditingItem(emptyFormState);
        setIsModalOpen(true);
    };
    
    const handleFormChange = (e: React.ChangeEvent<HTMLInputElement | HTMLTextAreaElement | HTMLSelectElement>) => {
        if (!editingItem) return;
        setEditingItem({ ...editingItem, [e.target.name]: e.target.value });
    };

    const handleFormSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        if (!editingItem) return;
        
        const { originalName, ...itemData } = editingItem;
        const isEditing = !!originalName;

        try {
            // The `ingredients` and `tags` properties are comma-separated strings from the form,
            // but the API expects a string array. This converts them before submission.
            const apiPayload = {
                ...itemData,
                ingredients: itemData.ingredients.split(',').map(i => i.trim()).filter(Boolean),
                tags: itemData.tags.split(',').map(t => t.trim()).filter(Boolean),
            };

            if (isEditing) {
                // The API needs to know the original name to find the item if the name is changed.
                // For this mock API, we assume the name is the unique key and it is not changed.
                // A real API would use an ID.
                await updateMenuItem({ ...apiPayload, name: originalName! });
            } else {
                await addMenuItem(apiPayload);
            }
            setIsModalOpen(false);
            setEditingItem(null);
            loadMenu(); // Refresh data
        } catch (error) {
            console.error("Failed to save menu item", error);
            logError(error as Error, { context: "Admin: Save Menu Item", itemData });
        }
    };

    const handleDelete = async (itemName: string) => {
        if (window.confirm(`Are you sure you want to delete "${itemName}"?`)) {
            try {
                await deleteMenuItem(itemName);
                loadMenu(); // Refresh data
            } catch (error) {
                console.error("Failed to delete menu item", error);
                logError(error as Error, { context: "Admin: Delete Menu Item", itemName });
            }
        }
    };

    if (isLoading) {
        return <div className="text-center p-8">Loading menu data...</div>;
    }

    return (
        <div>
            <div className="flex justify-between items-center mb-6">
                <h2 className="text-2xl font-semibold">Menu Items ({menu.length})</h2>
                <button onClick={openModalForNew} className="px-4 py-2 bg-amber-500 text-white font-semibold rounded-lg hover:bg-amber-600 transition">
                    Add New Item
                </button>
            </div>
            <div className="bg-gray-800 rounded-lg shadow-lg overflow-x-auto">
                <table className="w-full text-left">
                    <thead className="bg-gray-700">
                        <tr>
                            <th className="p-4">Name</th>
                            <th className="p-4">Category</th>
                            <th className="p-4">Price</th>
                            <th className="p-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {menu.map(item => (
                            <tr key={item.name} className="border-b border-gray-700 hover:bg-gray-700/50">
                                <td className="p-4 font-medium">{item.name}</td>
                                <td className="p-4">{item.category}</td>
                                <td className="p-4">{item.price}</td>
                                <td className="p-4 space-x-2">
                                    <button onClick={() => openModalForEdit(item)} className="text-amber-400 hover:text-amber-300">Edit</button>
                                    <button onClick={() => handleDelete(item.name)} className="text-red-500 hover:text-red-400">Delete</button>
                                </td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>
            
             <AnimatePresence>
                {isModalOpen && editingItem && (
                    <motion.div 
                        className="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4"
                        initial={{ opacity: 0 }}
                        animate={{ opacity: 1 }}
                        exit={{ opacity: 0 }}
                    >
                        <motion.div 
                            className="bg-gray-800 rounded-lg shadow-xl w-full max-w-2xl max-h-[90vh] overflow-y-auto"
                            initial={{ scale: 0.9, y: 20 }}
                            animate={{ scale: 1, y: 0 }}
                            exit={{ scale: 0.9, y: 20 }}
                        >
                            <form onSubmit={handleFormSubmit}>
                                <div className="p-6">
                                    <h3 className="text-xl font-bold text-amber-400 mb-6">{editingItem.originalName ? 'Edit' : 'Add'} Menu Item</h3>
                                    <div className="space-y-4">
                                        <div>
                                            <label className="block text-sm text-gray-400">Name</label>
                                            <input name="name" value={editingItem.name} onChange={handleFormChange} required disabled={!!editingItem.originalName} className="w-full p-2 bg-gray-700 rounded border border-gray-600 disabled:opacity-50" />
                                            {!!editingItem.originalName && <p className="text-xs text-gray-500 mt-1">Item name cannot be changed.</p>}
                                        </div>
                                       <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                                            <div>
                                                <label className="block text-sm text-gray-400">Category</label>
                                                <select name="category" value={editingItem.category} onChange={handleFormChange} className="w-full p-2 bg-gray-700 rounded border border-gray-600">
                                                    <option>Appetizers</option>
                                                    <option>Main Courses</option>
                                                    <option>Desserts</option>
                                                    <option>Beverages</option>
                                                </select>
                                            </div>
                                            <div>
                                                <label className="block text-sm text-gray-400">Price</label>
                                                <input name="price" value={editingItem.price} onChange={handleFormChange} required placeholder="$12.00" className="w-full p-2 bg-gray-700 rounded border border-gray-600" />
                                            </div>
                                        </div>
                                        <div>
                                            <label className="block text-sm text-gray-400">Description</label>
                                            <textarea name="description" value={editingItem.description} onChange={handleFormChange} required rows={3} className="w-full p-2 bg-gray-700 rounded border border-gray-600"></textarea>
                                        </div>
                                        <div>
                                            <label className="block text-sm text-gray-400">Ingredients (comma-separated)</label>
                                            <input name="ingredients" value={editingItem.ingredients} onChange={handleFormChange} required className="w-full p-2 bg-gray-700 rounded border border-gray-600" />
                                        </div>
                                        <div>
                                            <label className="block text-sm text-gray-400">Tags (comma-separated)</label>
                                            <input name="tags" value={editingItem.tags} onChange={handleFormChange} placeholder="e.g. vegan, gluten-free" className="w-full p-2 bg-gray-700 rounded border border-gray-600" />
                                        </div>
                                    </div>
                                </div>
                                <div className="p-4 bg-gray-900 flex justify-end space-x-4">
                                    <button type="button" onClick={() => setIsModalOpen(false)} className="px-4 py-2 bg-gray-600 hover:bg-gray-500 text-white rounded">Cancel</button>
                                    <button type="submit" className="px-4 py-2 bg-amber-500 hover:bg-amber-600 text-white font-semibold rounded">Save Item</button>
                                </div>
                            </form>
                        </motion.div>
                    </motion.div>
                )}
            </AnimatePresence>

        </div>
    );
};

export default MenuManager;
